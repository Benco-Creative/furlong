{
  "extends": "@plane/typescript-config/base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "node"
  },
  "include": ["src/*"],
  "exclude": ["dist", "build", "node_modules"]
}
