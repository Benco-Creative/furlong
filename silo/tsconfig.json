{
  "extends": "@plane/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "NodeNext",
    "target": "ESNext",
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "node_modules"]
}
